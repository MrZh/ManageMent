
@{
    Layout = null;
    bool isAdmin = false;
    if (Session["CurrentUserType"] != null)
    {
        if (Session["CurrentUserType"].ToString() == "1")
        {
            isAdmin = true;
        }
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>人事管理系统</title>
    <link href="~/Content/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Content/style/admin.css" rel="stylesheet" />
</head>
<body>
    <div class="layui-header">
        <p class="login-fun">欢迎您<span id="userinfo" style="margin-left:10px"></span><a class="layui-btn layui-btn-normal logout">退出</a></p>
    </div>
    <ul class="layui-nav layui-nav-side layui-nav-tree" lay-filter="test">
        <!-- 侧边导航: <ul class="layui-nav layui-nav-tree layui-nav-side"> -->
        <li class="layui-nav-item"><a href="/Home/Index">我的主页</a></li>
        <li class="layui-nav-item"><a href="/MyAttendance/Index">我的考勤</a></li>
        @if (isAdmin)
        {
            <li class="layui-nav-item"><a href="/Attendance/Index">考勤管理</a></li>
            <li class="layui-nav-item"><a href="/Department/Index">部门管理</a></li>
            <li class="layui-nav-item"><a href="/Resign/Index">职务管理</a></li>
            <li class="layui-nav-item"><a href="/News/Index">公告管理</a></li>
            <li class="layui-nav-item layui-this"><a href="/UserManage/Index">人员管理</a></li>
            <li class="layui-nav-item"><a href="/UserManage/DimissRecord">离职登记记录</a></li>
            <li class="layui-nav-item"><a href="/UserManage/UserModifyRecord">人事调整记录</a></li>
            <li class="layui-nav-item"><a href="/UserManage/UserSalaryModifyRecord">薪资调整记录</a></li>
        }
        <li class="layui-nav-item "><a href="/UserInfo/Index">个人信息</a></li>
        <li class="layui-nav-item"><a href="/UserInfo/ChangePassword">密码修改</a></li>
    </ul>
    <div class="layui-site-content ">
        <h1 class="layui-colla-title title-from">人员管理</h1>
        <div class="layui-clear search-box">
            <div class="site-left">
                <div class="site-content">
                    <div class="layui-inline">
                        <label class="layui-form-label">关键字</label>
                        <div class="layui-input-inline">
                            <input type="text" id="key"  autocomplete="off" placeholder="请输入关键字" class="layui-input">
                        </div>
                    </div>
                </div>
            </div>
            <div class="site-right">
                <button class="layui-btn layui-btn-normal" id="searchBtn">搜索</button>
            </div>
        </div>
        <div class="button-box">
            <button class="layui-btn" id="addBtn">新增人员</button>
            <button class="layui-btn" id="modifyBtn">修改人员</button>
            <button class="layui-btn" id="dismissBtn">员工离职</button>
            <button class="layui-btn" id="userModify">人事变动</button>
            <button class="layui-btn" id="salaryModify">薪资变动</button>
            <button class="layui-btn" id="modifyStatus">员工转正</button>
            <button class="layui-btn" id="modifyPassword">密码重置</button>
            <button class="layui-btn layui-btn-danger" id="delBtn">删除人员</button>
        </div>
        <div class="layui-form">
            <table class="layui-table">
                <colgroup>
                    <col width="50">
                    <col width="150">
                    <col width="150">
                    <col width="150">
                    <col width="150">
                    <col>
                </colgroup>
                <thead>
                    <tr>
                        <th><input type="checkbox" name="" lay-skin="primary" lay-filter="allChoose"></th>
                        <th>姓名</th>
                        <th>职务</th>
                        <th>部门</th>
                        <th>状态</th>
                        <th>入职时间</th>
                    </tr>
                </thead>
                <tbody id="user-data">
                </tbody>
            </table>
        </div>
        <div id="demo1" class="page-box"></div>
    </div>
    <script src="~/Content/jquery-1.10.2.min.js"></script>
    <script src="~/Content/layui/layui.js"></script>
    <script src="~/Content/jquery.tmpl.min.js"></script>
    <script type="text/x-jquery-tmpl" id="user-tmpl">
        <tr>
            <td><input type="checkbox" name="" value="${Id}" lay-skin="primary"></td>
            <td>${Name}</td>
            <td>${DepartmentName}</td>
            <td>${ResignName}</td>
            <td>${Status}</td>
            <td>${CreateTime}</td>
        </tr>
    </script>
    <script>

    //一般直接写在一个js文件中
    layui.use(['jquery','layer', 'form', 'element','laypage'], function () {
        var $ = layui.jquery,
            layer = layui.layer,
            form = layui.form(),
            element = layui.element(),
            laypage = layui.laypage;
        var keyword = "";
        $(".logout").on("click", function () {
            location.href = "/Login/Logout"
        });
        $.get("/MyAttendance/GetCurrentUserInfo", function (result) {
            if (result.Status == 125) {
                location.href = "/Login/Index";
            }

            $("#userinfo").text(result.Data.UserName);
            return false;
        });
        $.get("/UserManage/GetUserList", {key:keyword, pageIndex: 1,pageSize:2}, function (result) {
            //$("#news-type-tmpl").tmpl(result).appendTo("#news-type-data");
            laypage({
                cont: 'demo1'
                ,pages: result.TotalPage //总页数
                , groups: 5 //
                , jump: function (result) {
                    getPage(result);
                }
            });
            render(result.Data.Entity);
            form.render();
            return false;
        });

        var getPage = function (obj) {
            $.get("/UserManage/GetUserList", { key: keyword, pageIndex: obj.curr, pageSize: 2 }, function (result) {
                //$("#news-type-tmpl").tmpl(result).appendTo("#news-type-data");
                render(result.Data.Entity);
                console.log(result.Data.Entity);
                form.render();
                return false;
            });
        }

        var search = function () {
            keyword = $("#key").val();
            $.get("/UserManage/GetUserList", { key: keyword, pageIndex: 1, pageSize: 2 }, function (result) {
                //$("#news-type-tmpl").tmpl(result).appendTo("#news-type-data");
                laypage({
                    cont: 'demo1'
                    , pages: result.TotalPage //总页数
                    , groups: 5 //
                    , jump: function (result) {
                        getPage(result);
                    }
                });
                render(result.Data.Entity);
                form.render();
                return false;
            });
        }

        var render = function (data) {
            $("#user-data").empty();
            $("#user-tmpl").tmpl(data).appendTo("#user-data");

        }

        laypage({
            cont: 'demo1'
            ,pages: 100 //总页数
            ,groups: 5 //连续显示分页数
        });
         //全选
        form.on('checkbox(allChoose)', function(data){
            var child = $(data.elem).parents('table').find('tbody input[type="checkbox"]');
            child.each(function(index, item){
            item.checked = data.elem.checked;
            });
            form.render('checkbox');
        });
        $(function(){
            $('#add').click(function(){
                $("input[type='checkbox']").each(function(){
                    if($(this).is(":checked")){
                        console.log($(this).val());
                    }
                })
            })

            $("#searchBtn").click(function () {
                search();
            });

            $("#addBtn").click(function () {
                window.location.href = "/UserManage/Create";
            })

            $("#modifyBtn").click(function () {
                var id = [];
                $("input[type='checkbox']").each(function () {
                    if ($(this).is(":checked")) {
                        if ($(this).val() != "on") {
                            id.push($(this).val());
                        }
                    }
                })
                if (id.length > 1) {
                    layer.msg("只能修改一个");
                    return false;
                }

                if (id.length < 1) {
                    layer.msg("请选中要修改的职员");
                    return false;
                }

                console.log(id);
                window.location.href = "/UserManage/Edit?id=" + id[0];
            })

            $("#delBtn").click(function () {
                var id = [];
                $("input[type='checkbox']").each(function () {
                    if ($(this).is(":checked")) {
                        if ($(this).val() != "on") {
                            id.push($(this).val());
                        }
                    }
                })

                if (id.length < 1) {
                    layer.msg("请选中要删除的职员");
                    return false;
                }



                $.get("/UserManage/DeleteUsers", { id: id.join(',') }, function (result) {
                    if (result.Status == 200) {
                        window.location.reload(true);
                    } else {
                        layer.msg(result.Message);
                    }
                    return false;
                });
                console.log(id);
            })

            $("#modifyPassword").click(function () {
                var id = [];
                $("input[type='checkbox']").each(function () {
                    if ($(this).is(":checked")) {
                        if ($(this).val() != "on") {
                            id.push($(this).val());
                        }
                    }
                })

                if (id.length < 1) {
                    layer.msg("请选中要删除的职员");
                    return false;
                }



                $.get("/UserManage/UpdateUsersPassword", { id: id.join(',') }, function (result) {
                    if (result.Status == 200) {
                        window.location.reload(true);
                    } else {
                        layer.msg(result.Message);
                    }
                    return false;
                });
                console.log(id);
            })

            $("#modifyStatus").click(function () {
                var id = [];
                $("input[type='checkbox']").each(function () {
                    if ($(this).is(":checked")) {
                        if ($(this).val() != "on") {
                            id.push($(this).val());
                        }
                    }
                })

                if (id.length < 1) {
                    layer.msg("请选中要转正的职员");
                    return false;
                }



                $.get("/UserManage/UpdateUsers", { id: id.join(',') }, function (result) {
                    if (result.Status == 200) {
                        window.location.reload(true);
                    } else {
                        layer.msg(result.Message);
                    }
                    return false;
                });
                console.log(id);
            })

            $("#dismissBtn").click(function () {
                var id = [];
                $("input[type='checkbox']").each(function () {
                    if ($(this).is(":checked")) {
                        if ($(this).val() != "on") {
                            id.push($(this).val());
                        }
                    }
                })
                if (id.length > 1) {
                    layer.msg("只能操作一个");
                    return false;
                }

                if (id.length < 1) {
                    layer.msg("请选中要操作的职员");
                    return false;
                }

                console.log(id);
                window.location.href = "/UserManage/Dismiss?id=" + id[0];
            })

            $("#salaryModify").click(function () {
                var id = [];
                $("input[type='checkbox']").each(function () {
                    if ($(this).is(":checked")) {
                        if ($(this).val() != "on") {
                            id.push($(this).val());
                        }
                    }
                })
                if (id.length > 1) {
                    layer.msg("只能操作一个");
                    return false;
                }

                if (id.length < 1) {
                    layer.msg("请选中要操作的职员");
                    return false;
                }

                console.log(id);
                window.location.href = "/UserManage/UserSalaryModify?id=" + id[0];
            })

            $("#userModify").click(function () {
                var id = [];
                $("input[type='checkbox']").each(function () {
                    if ($(this).is(":checked")) {
                        if ($(this).val() != "on") {
                            id.push($(this).val());
                        }
                    }
                })
                if (id.length > 1) {
                    layer.msg("只能操作一个");
                    return false;
                }

                if (id.length < 1) {
                    layer.msg("请选中要操作的职员");
                    return false;
                }

                console.log(id);
                window.location.href = "/UserManage/UserModify?id=" + id[0];
            })
        })
    });
    </script>
</body>
</html>
